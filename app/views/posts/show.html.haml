.side-index
  .side-index__memo
    = link_to "メモ", posts_index_path, class: "a"
  %ul.side-index__label
    %li インスピレーション
    %li プライベート
    %li 仕事
    %li ラベルの編集
  .side-index__trash-can
    ゴミ箱


.main.posts-show
  .container
    .posts-show-item
      %p
        = @post.content
      .post-time
        = @post.created_at
      .post-menus
        = link_to "編集", "/posts/#{@post.id}/edit"
        = link_to "削除", "/posts/#{@post.id}/destroy", method: "post"
          